<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/character">
    <fragment
        android:id="@+id/character"
        android:name="com.example.andersenrickandmortiapiapp.fragments.character.CharacterFragment"
        android:label="fragment_character"
        tools:layout="@layout/fragment_character" >

        <action
            android:id="@+id/action_character_to_characterData"
            app:destination="@id/characterData" />
    </fragment>

    <fragment
        android:id="@+id/characterData"
        android:name="com.example.andersenrickandmortiapiapp.fragments.character_data.CharacterData"
        android:label="fragment_character_data"

        tools:layout="@layout/fragment_character_data" >
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue = "11"/>
    </fragment>
    <fragment
        android:id="@+id/episodes"
        android:name="com.example.andersenrickandmortiapiapp.fragments.episode.EpisodesFragment"
        android:label="fragment_episodes"
        tools:layout="@layout/fragment_episodes" />
    <fragment
        android:id="@+id/locations"
        android:name="com.example.andersenrickandmortiapiapp.fragments.location.LocationsFragment"
        android:label="fragment_locations"
        tools:layout="@layout/fragment_locations" />

</navigation>